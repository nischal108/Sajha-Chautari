{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "typeRoots": ["node_modules/@types", "types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "jest"]  // Add this line
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ]
}
